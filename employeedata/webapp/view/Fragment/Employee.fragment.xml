<core:FragmentDefinition xmlns="sap.m"
	xmlns:f="sap.ui.layout.form"

    xmlns:core="sap.ui.core">
    
    <Dialog id="employeedetails" title="{i18n>employeeDetails}">
        <content>
           <VBox id="_IDGenVBox1" class="sapUiSmallMargin">
		<f:SimpleForm id="SimpleFormChange354"
			editable="true"
			layout="ResponsiveGridLayout"
			labelSpanXL="5"
			labelSpanL="5"
			labelSpanM="5"
			labelSpanS="12"
			adjustLabelSpan="false"
			emptySpanXL="4"
			emptySpanL="4"
			emptySpanM="4"
			emptySpanS="4"
			columnsXL="5"
			columnsL="5"
			columnsM="5"
			singleContainerFullSize="false" >
			<f:content>
             <Label id="_IDGenLabel1" text="{i18n>employeeId}"/>
                    <Input id="_IDGenInput1" value="{empmodel>/employeeid}"/>
                     <Label id="_IDGenLabel2" text="{i18n>name}"/>
                    <Input id="_IDGenInput2" value="{empmodel>/name}"/>
                     <Label id="_IDGenLabel3" text="{i18n>department}"/>
                    <Input id="_IDGenInput3" value="{empmodel>/department}"/>
                     <Label id="_IDGenLabel4" text="{i18n>designation}"/>
                    <Input id="_IDGenInput4" value="{empmodel>/designation}"/>
                     <Label id="_IDGenLabel5" text="{i18n>salary}"/>
                    <Input id="_IDGenInput5" value="{empmodel>/salary}"/>
            		</f:content>
		</f:SimpleForm>
	</VBox>
 </content>
         <buttons>          
            <Button id="_IDGenButton4" text="Save"  press="onSave"  width="auto" class="sapUiTinyMargin"/>
            <Button id="_IDGenButton5" text="Cancel"  press="onCancel"  width="auto" class="sapUiTinyMargin"/>
          </buttons>
           </Dialog>
        </core:FragmentDefinition>   